<Window x:Class="PCKonfigurator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PCKonfigurator"
        mc:Ignorable="d"
        Title="PC-Konfigurator" Height="768" Width="1366" WindowState="Maximized">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Assets/2098480.png" Opacity="0.5"/>
        </Grid.Background>        
        <Frame x:Name="Main" />
        <Button Name="BtnStartKonfig" VerticalAlignment="Center" HorizontalAlignment="Center" Width="400" Height="200" FontSize="32" Click="BtnStartKonfig_Click" Background="Transparent" BorderBrush="Black" BorderThickness="5">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>

                </Style>
            </Button.Resources>
            <TextBlock Foreground="Black" FontWeight="SemiBold" FontSize="42">Starte Konfigurator</TextBlock>
        </Button>
    </Grid>

</Window>
